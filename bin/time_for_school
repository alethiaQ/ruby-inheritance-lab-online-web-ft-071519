#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach

steve.learn(some_knowledge)




 jim = User.new
 jim.first_name = "Jimmy"
 jim.last_name = "Jon"

more_knowledge = avi.teach
steve.learn(more_knowledge)

leeth = Student.new
leeth.first_name = "Leethie"
leeth.last_name = "Quintero"
leeth.learn(more_knowledge)

puts "Steve learned this important knowledge: '#{steve.knowledge}', while Leethie only learned '#{leeth.knowledge}' from Avi"
